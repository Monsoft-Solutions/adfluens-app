# ===========================================
# YouTube Channel Analyzer - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/youtube_analyzer

# ===========================================
# Server Configuration
# ===========================================
# Server port (defaults to 3001)
PORT=3001

# Environment mode (development | production | test)
NODE_ENV=development

# Better Auth base URL (your API server URL)
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
BETTER_AUTH_URL=http://localhost:3001

# Better Auth secret key for signing sessions/tokens
# Generate a secure random string (at least 32 characters)
# You can generate one with: openssl rand -base64 32
BETTER_AUTH_SECRET=your_secret_key_here_minimum_32_chars

# Frontend application URL (for CORS and redirects)
# Development: http://localhost:3000
# Production: https://yourdomain.com
APP_URL=http://localhost:3000

# ===========================================
# API Keys
# ===========================================
# YouTube Data API v3 key
# Get one at: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini AI API key
# Get one at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ScrapingDog API key (web scraping)
# Get one at: https://www.scrapingdog.com
SCRAPINGDOG_API_KEY=your_scrapingdog_api_key_here

# ScrapeCreator API key (social media scraping)
# Get one at: https://www.scrapecreators.com
SCRAPECREATOR_API_KEY=your_scrapecreator_api_key_here

# ===========================================
# OAuth Providers
# ===========================================
# Google OAuth credentials
# Configure at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth credentials
# Configure at: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# ===========================================
# Google Cloud Storage
# ===========================================
# GCP Project ID
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here

# Service account email (from GCP service account JSON key)
GOOGLE_CLOUD_CLIENT_EMAIL=service-account@your-project.iam.gserviceaccount.com

# Service account private key (from GCP service account JSON key)
# IMPORTANT: Use literal \n characters, not actual newlines
# Example: -----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n
GOOGLE_CLOUD_PRIVATE_KEY=your_private_key_here

# GCS bucket name for storing media files
GOOGLE_CLOUD_MEDIA_BUCKET_NAME=your_bucket_name_here
