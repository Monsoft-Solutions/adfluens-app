const activeCategory = faqCategories[0].name;
---

<Layout
  title="FAQ - Frequently Asked Questions | Adfluens"
  description="Find answers to common questions about Adfluens, our AI-powered social media management platform. Learn about features, pricing, security, and support."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative section-padding bg-background overflow-hidden">
      <GridPattern class="opacity-[0.02]" />
      <GlowOrb color="lime" position="top-left" size="xl" animation="slow" class="opacity-15" />

      <div class="relative z-10 container-marketing text-center">
        <h1
          class="font-display text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6"
          data-reveal
        >
          Frequently Asked
          <span class="text-gradient-primary">Questions</span>
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
          Everything you need to know about Adfluens. Can't find the answer you're looking for? Reach out to our
          support team.
        </p>
      </div>
    </section>

    <!-- FAQ Categories -->
    <section class="relative section-padding bg-background">
      <div class="container-marketing">
        <!-- Category Navigation -->
        <div class="flex flex-wrap justify-center gap-3 mb-12" data-reveal>
          {
            faqCategories.map((category, index) => (
              <button
                type="button"
                class:list={[
                  "faq-category-btn flex items-center gap-2 px-4 py-2 rounded-lg border transition-all",
                  index === 0
                    ? "border-primary bg-primary/10 text-primary"
                    : "border-border bg-card text-muted-foreground hover:border-foreground/20 hover:text-foreground",
                ]}
                data-category={category.name}
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  viewBox="0 0 24 24"
                  set:html={category.icon}
                />
                <span class="text-sm font-medium">{category.name}</span>
              </button>
            ))
          }
        </div>

        <!-- FAQ Sections -->
        <div class="max-w-3xl mx-auto">
          {
            faqCategories.map((category, categoryIndex) => (
              <div
                class:list={["faq-section", categoryIndex === 0 ? "block" : "hidden"]}
                data-section={category.name}
                data-reveal
                data-delay="1"
              >
                <div class="mb-6">
                  <h2 class="font-display text-2xl font-bold text-foreground mb-2">{category.name}</h2>
                  <div class="h-1 w-16 bg-primary rounded-full" />
                </div>
                <Accordion items={category.questions} />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Still Have Questions CTA -->
    <section class="relative section-padding bg-muted/10 border-t border-border">
      <GlowOrb color="orange" position="center" size="xl" animation="none" class="opacity-10" />

      <div class="relative z-10 container-marketing text-center">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
          Still have questions?
        </h2>
        <p class="text-muted-foreground max-w-xl mx-auto mb-8" data-reveal data-delay="1">
          Can't find the answer you're looking for? Our friendly support team is here to help.
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-reveal data-delay="2">
          <Button variant="primary" size="lg" href="/contact">
            Contact Support
          </Button>
          <Button variant="outline" size="lg" href="https://help.adfluens.io" target="_blank">
            Browse Help Center
          </Button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  function initFaqCategories() {
    const categoryButtons = document.querySelectorAll(".faq-category-btn");
    const faqSections = document.querySelectorAll(".faq-section");

    categoryButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const category = button.getAttribute("data-category");

        // Update button styles
        categoryButtons.forEach((btn) => {
          btn.classList.remove("border-primary", "bg-primary/10", "text-primary");
          btn.classList.add("border-border", "bg-card", "text-muted-foreground");
        });
        button.classList.remove("border-border", "bg-card", "text-muted-foreground");
        button.classList.add("border-primary", "bg-primary/10", "text-primary");

        // Show/hide sections
        faqSections.forEach((section) => {
          if (section.getAttribute("data-section") === category) {
            section.classList.remove("hidden");
            section.classList.add("block");
          } else {
            section.classList.add("hidden");
            section.classList.remove("block");
          }
        });
      });
    });
  }

  initFaqCategories();
  document.addEventListener("astro:page-load", initFaqCategories);
</script>
