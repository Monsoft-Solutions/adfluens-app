---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/ui/Button.astro";
import FeatureCard from "../../components/ui/FeatureCard.astro";
import GlowOrb from "../../components/effects/GlowOrb.astro";
import GridPattern from "../../components/effects/GridPattern.astro";

const features = [
  {
    icon: "brain",
    title: "Multi-Platform Generation",
    description: "One idea becomes platform-perfect posts for Instagram, Facebook, Threads, and Google My Business.",
    gradient: "orange" as const,
  },
  {
    icon: "mic",
    title: "Brand Voice Learning",
    description: "Our AI analyzes your existing content to match your unique tone, style, and personality.",
    gradient: "lime" as const,
  },
  {
    icon: "trending-up",
    title: "Trending Topic Suggestions",
    description: "Real-time trend analysis with content recommendations relevant to your industry.",
    gradient: "emerald" as const,
  },
  {
    icon: "copy",
    title: "Caption Variations",
    description: "Generate multiple versions of any post instantly for A/B testing without extra work.",
    gradient: "orange" as const,
  },
  {
    icon: "image",
    title: "Visual Suggestions",
    description: "AI recommends images, hashtags, and optimal posting times for maximum engagement.",
    gradient: "lime" as const,
  },
  {
    icon: "calendar",
    title: "Content Calendar",
    description: "Visual planning with AI-suggested content gaps so you never miss an opportunity.",
    gradient: "emerald" as const,
  },
];

const icons: Record<string, string> = {
  brain: `<path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"/><path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z"/><path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4"/>`,
  mic: `<path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/>`,
  "trending-up": `<polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/><polyline points="16 7 22 7 22 13"/>`,
  copy: `<rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/>`,
  image: `<rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>`,
  calendar: `<path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/>`,
};

const relatedFeatures = [
  { name: "GMB Command Center", href: "/features/gmb", description: "Full control of your Google presence" },
  { name: "Meta Unified", href: "/features/meta", description: "Instagram, Facebook, Threads in sync" },
  { name: "Smart Analytics", href: "/features/analytics", description: "AI-powered insights" },
];
---

<Layout
  title="AI Content Engine - Adfluens"
  description="Generate platform-perfect posts in seconds. Our AI learns your brand voice and never misses a trend."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative section-padding bg-background overflow-hidden">
      <GridPattern class="opacity-[0.02]" />
      <GlowOrb color="orange" position="top-right" size="xl" animation="slow" class="opacity-20" />

      <div class="relative z-10 container-marketing">
        <div class="max-w-3xl">
          <a
            href="/features"
            class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors mb-6"
            data-reveal
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="m15 18-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            All Features
          </a>

          <div class="flex items-center gap-3 mb-6" data-reveal data-delay="1">
            <div class="w-12 h-12 rounded-lg border border-primary/30 bg-primary/10 flex items-center justify-center">
              <svg
                class="w-6 h-6 text-primary"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                viewBox="0 0 24 24"
                set:html={icons.brain}
              />
            </div>
            <span class="text-sm font-medium text-primary">AI Content Engine</span>
          </div>

          <h1
            class="font-display text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6"
            data-reveal
            data-delay="2"
          >
            AI that writes like you,
            <span class="text-gradient-primary">only faster</span>
          </h1>

          <p class="text-xl text-muted-foreground leading-relaxed mb-8" data-reveal data-delay="3">
            Generate platform-perfect posts in seconds. Our AI learns your brand voice and never misses a trend—so you
            can focus on growing your business instead of staring at a blank screen.
          </p>

          <div class="flex flex-wrap gap-4" data-reveal data-delay="4">
            <Button variant="primary" size="lg" href="/signup">
              Start Creating with AI
            </Button>
            <Button variant="outline" size="lg" href="/demo">
              See It in Action
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem/Solution Section -->
    <section class="relative section-padding bg-muted/10 border-t border-b border-border">
      <div class="container-marketing">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Problem -->
          <div data-reveal>
            <p class="text-sm font-medium text-destructive mb-3">The Problem</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              Content creation is exhausting
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              You know you need to post consistently, but finding time to create engaging content for multiple platforms
              is overwhelming. By the time you finish one post, you're already behind on three others.
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Hours spent staring at blank screens</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Inconsistent posting schedules</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Content that doesn't match your brand voice</span>
              </li>
            </ul>
          </div>

          <!-- Solution -->
          <div data-reveal data-delay="1">
            <p class="text-sm font-medium text-secondary mb-3">The Solution</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              AI that knows your brand
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Adfluens AI analyzes your existing content to learn your unique voice, then generates platform-optimized
              posts that sound authentically you. No more generic content—just posts your audience will love.
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Generate weeks of content in minutes</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Consistent voice across all platforms</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>AI that improves the more you use it</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="relative section-padding bg-background">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            Everything you need to create faster
          </h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            From ideation to publication, our AI handles every step of content creation.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            features.map((feature, index) => (
              <div data-reveal data-delay={index + 1}>
                <FeatureCard
                  title={feature.title}
                  description={feature.description}
                  icon={feature.icon}
                  gradient={feature.gradient}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Demo/Visual Section -->
    <section class="relative section-padding bg-muted/10 border-t border-border">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>See it in action</h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            Watch how Adfluens generates a week's worth of content in under 60 seconds.
          </p>
        </div>

        <div class="max-w-4xl mx-auto" data-reveal data-delay="2">
          <div class="aspect-video rounded-lg border border-border bg-card overflow-hidden">
            <!-- Placeholder for demo video/screenshot -->
            <div
              class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/5 to-accent/5"
            >
              <div class="text-center">
                <div
                  class="w-20 h-20 rounded-full border border-border bg-muted/30 flex items-center justify-center mx-auto mb-4 cursor-pointer hover:bg-muted/50 transition-colors"
                >
                  <svg class="w-8 h-8 text-foreground ml-1" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"></path>
                  </svg>
                </div>
                <p class="text-sm text-muted-foreground">Watch the demo (2 min)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Features -->
    <section class="relative section-padding bg-background border-t border-border">
      <div class="container-marketing">
        <h2 class="font-display text-xl font-bold text-foreground mb-8" data-reveal>
          Explore more features
        </h2>

        <div class="grid md:grid-cols-3 gap-6">
          {
            relatedFeatures.map((feature, index) => (
              <a
                href={feature.href}
                class="group p-6 rounded-lg border border-border bg-card hover:bg-muted/30 transition-colors"
                data-reveal
                data-delay={index + 1}
              >
                <h3 class="font-display font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
                  {feature.name}
                </h3>
                <p class="text-sm text-muted-foreground">{feature.description}</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative section-padding bg-background overflow-hidden border-t border-border">
      <GlowOrb color="orange" position="center" size="2xl" animation="none" class="opacity-15" />

      <div class="relative z-10 container-marketing text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground mb-6" data-reveal>
          Ready to create smarter?
        </h2>
        <p class="text-lg text-muted-foreground max-w-xl mx-auto mb-8" data-reveal data-delay="1">
          Start your free trial and generate your first content in minutes.
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-reveal data-delay="2">
          <Button variant="primary" size="lg" href="/signup">
            Start Creating with AI
          </Button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
