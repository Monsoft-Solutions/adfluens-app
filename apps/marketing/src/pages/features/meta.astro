---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/ui/Button.astro";
import FeatureCard from "../../components/ui/FeatureCard.astro";
import GlowOrb from "../../components/effects/GlowOrb.astro";
import GridPattern from "../../components/effects/GridPattern.astro";

const features = [
  {
    icon: "smartphone",
    title: "Cross-Platform Publishing",
    description: "One post adapted for Instagram, Facebook, and Threads. 3x the reach, 1x the effort.",
    gradient: "orange" as const,
  },
  {
    icon: "film",
    title: "Story & Reel Scheduling",
    description: "Schedule ephemeral content in advance so you can plan your whole week at once.",
    gradient: "lime" as const,
  },
  {
    icon: "inbox",
    title: "Unified Inbox",
    description: "All comments and DMs from every Meta platform in one place for faster response times.",
    gradient: "emerald" as const,
  },
  {
    icon: "message-circle",
    title: "Conversational Flows",
    description: "Build automated DM sequences for 24/7 customer engagement without lifting a finger.",
    gradient: "orange" as const,
  },
  {
    icon: "users",
    title: "Audience Insights",
    description: "Deep demographic and behavior analytics to help you know your audience better.",
    gradient: "lime" as const,
  },
  {
    icon: "eye",
    title: "Competitor Tracking",
    description: "Monitor competitor performance and stay ahead of the game with real-time insights.",
    gradient: "emerald" as const,
  },
];

const icons: Record<string, string> = {
  smartphone: `<rect width="14" height="20" x="5" y="2" rx="2" ry="2"/><path d="M12 18h.01"/>`,
  film: `<rect width="18" height="18" x="3" y="3" rx="2"/><path d="M7 3v18"/><path d="M3 7.5h4"/><path d="M3 12h18"/><path d="M3 16.5h4"/><path d="M17 3v18"/><path d="M17 7.5h4"/><path d="M17 16.5h4"/>`,
  inbox: `<polyline points="22 12 16 12 14 15 10 15 8 12 2 12"/><path d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z"/>`,
  "message-circle": `<path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/>`,
  users: `<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`,
  eye: `<path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"/><circle cx="12" cy="12" r="3"/>`,
};

const relatedFeatures = [
  { name: "AI Content Engine", href: "/features/ai-content", description: "Generate content in seconds" },
  { name: "GMB Command Center", href: "/features/gmb", description: "Full control of your Google presence" },
  { name: "Smart Analytics", href: "/features/analytics", description: "AI-powered insights" },
];
---

<Layout
  title="Meta Unified - Adfluens"
  description="Instagram, Facebook, Threads—all in sync. Schedule, engage, and analyze across the entire Meta universe."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative section-padding bg-background overflow-hidden">
      <GridPattern class="opacity-[0.02]" />
      <GlowOrb color="orange" position="top-right" size="xl" animation="float-slow" class="opacity-15" />
      <GlowOrb color="lime" position="bottom-left" size="lg" animation="float-medium" class="opacity-10" />

      <div class="relative z-10 container-marketing">
        <div class="max-w-3xl">
          <a
            href="/features"
            class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors mb-6"
            data-reveal
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="m15 18-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            All Features
          </a>

          <div class="flex items-center gap-3 mb-6" data-reveal data-delay="1">
            <div
              class="w-12 h-12 rounded-lg border border-secondary/30 bg-secondary/10 flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-secondary"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                viewBox="0 0 24 24"
                set:html={icons.smartphone}
              />
            </div>
            <span class="text-sm font-medium text-secondary">Meta Unified</span>
          </div>

          <h1
            class="font-display text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6"
            data-reveal
            data-delay="2"
          >
            Instagram. Facebook. Threads.
            <span class="text-gradient-primary">Finally in sync.</span>
          </h1>

          <p class="text-xl text-muted-foreground leading-relaxed mb-8" data-reveal data-delay="3">
            Unified control over every Meta platform. Schedule posts, manage conversations, and track performance—all
            from one dashboard that works as hard as you do.
          </p>

          <div class="flex flex-wrap gap-4" data-reveal data-delay="4">
            <Button variant="primary" size="lg" href="/signup">
              Unify Your Meta Presence
            </Button>
            <Button variant="outline" size="lg" href="/demo">
              See It in Action
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem/Solution Section -->
    <section class="relative section-padding bg-muted/10 border-t border-b border-border">
      <div class="container-marketing">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Problem -->
          <div data-reveal>
            <p class="text-sm font-medium text-destructive mb-3">The Problem</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              Meta platforms are fragmented
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Managing Instagram, Facebook, and Threads separately is a time sink. Each platform has different tools,
              different posting requirements, and different analytics—tripling your workload.
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Three platforms, three different workflows</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>DMs and comments scattered everywhere</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>No unified view of your performance</span>
              </li>
            </ul>
          </div>

          <!-- Solution -->
          <div data-reveal data-delay="1">
            <p class="text-sm font-medium text-secondary mb-3">The Solution</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              One dashboard, every platform
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Adfluens unifies Instagram, Facebook, and Threads into one seamless experience. Post once, adapt
              everywhere. Reply to all messages from one inbox. See all your analytics in one report.
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>3x the reach with 1x the effort</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>All conversations in one unified inbox</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Cross-platform analytics at a glance</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="relative section-padding bg-background">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            Everything for Meta, in one place
          </h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            From scheduling to engagement to analytics—master the Meta universe.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            features.map((feature, index) => (
              <div data-reveal data-delay={index + 1}>
                <FeatureCard
                  title={feature.title}
                  description={feature.description}
                  icon={feature.icon}
                  gradient={feature.gradient}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Platform Support -->
    <section class="relative section-padding bg-muted/10 border-t border-border">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            Full platform support
          </h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            Every feature you need for every Meta platform.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="p-6 rounded-lg border border-border bg-card" data-reveal data-delay="1">
            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-pink-500 to-purple-600 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm6.5-.25a1.25 1.25 0 0 0-2.5 0 1.25 1.25 0 0 0 2.5 0zM12 9a3 3 0 1 1 0 6 3 3 0 0 1 0-6z"/>
              </svg>
            </div>
            <h3 class="font-display font-semibold text-lg text-foreground mb-2">Instagram</h3>
            <ul class="text-sm text-muted-foreground space-y-2">
              <li>Posts, Stories, Reels</li>
              <li>DM management</li>
              <li>Comment moderation</li>
              <li>Instagram Insights</li>
            </ul>
          </div>

          <div class="p-6 rounded-lg border border-border bg-card" data-reveal data-delay="2">
            <div class="w-12 h-12 rounded-lg bg-blue-600 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </div>
            <h3 class="font-display font-semibold text-lg text-foreground mb-2">Facebook</h3>
            <ul class="text-sm text-muted-foreground space-y-2">
              <li>Page posts & scheduling</li>
              <li>Messenger management</li>
              <li>Groups support</li>
              <li>Facebook Insights</li>
            </ul>
          </div>

          <div class="p-6 rounded-lg border border-border bg-card" data-reveal data-delay="3">
            <div class="w-12 h-12 rounded-lg bg-foreground flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-background" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12.186 24h-.007c-3.581-.024-6.334-1.205-8.184-3.509C2.35 18.44 1.5 15.586 1.472 12.01v-.017c.03-3.579 1.024-6.434 2.553-8.485C5.877 1.205 8.55.024 12.031 0h.014c2.11.012 4.008.526 5.646 1.529a10.474 10.474 0 0 1 3.519 3.517l-1.898 1.16A8.507 8.507 0 0 0 12.044 2.1c-5.616 0-8.477 4.015-8.477 9.9 0 5.855 2.861 9.9 8.477 9.9a8.8 8.8 0 0 0 3.33-.63V16.5H12.14v-2.1h5.352v7.005c-1.534.851-3.456 1.416-5.306 1.595z"/>
              </svg>
            </div>
            <h3 class="font-display font-semibold text-lg text-foreground mb-2">Threads</h3>
            <ul class="text-sm text-muted-foreground space-y-2">
              <li>Cross-posting from IG</li>
              <li>Native thread creation</li>
              <li>Engagement tracking</li>
              <li>Early-mover analytics</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Features -->
    <section class="relative section-padding bg-background border-t border-border">
      <div class="container-marketing">
        <h2 class="font-display text-xl font-bold text-foreground mb-8" data-reveal>
          Explore more features
        </h2>

        <div class="grid md:grid-cols-3 gap-6">
          {
            relatedFeatures.map((feature, index) => (
              <a
                href={feature.href}
                class="group p-6 rounded-lg border border-border bg-card hover:bg-muted/30 transition-colors"
                data-reveal
                data-delay={index + 1}
              >
                <h3 class="font-display font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
                  {feature.name}
                </h3>
                <p class="text-sm text-muted-foreground">{feature.description}</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative section-padding bg-background overflow-hidden border-t border-border">
      <GlowOrb color="orange" position="center" size="2xl" animation="none" class="opacity-15" />

      <div class="relative z-10 container-marketing text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground mb-6" data-reveal>
          Ready to unify your Meta presence?
        </h2>
        <p class="text-lg text-muted-foreground max-w-xl mx-auto mb-8" data-reveal data-delay="1">
          Start your free trial and manage all Meta platforms from one place.
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-reveal data-delay="2">
          <Button variant="primary" size="lg" href="/signup">
            Unify Your Meta Presence
          </Button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
