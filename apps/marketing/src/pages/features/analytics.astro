---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Button from "../../components/ui/Button.astro";
import FeatureCard from "../../components/ui/FeatureCard.astro";
import GlowOrb from "../../components/effects/GlowOrb.astro";
import GridPattern from "../../components/effects/GridPattern.astro";

const features = [
  {
    icon: "bar-chart-2",
    title: "Unified Dashboard",
    description: "All your platforms in one view. See the complete picture of your social performance instantly.",
    gradient: "emerald" as const,
  },
  {
    icon: "brain",
    title: "AI-Powered Insights",
    description: "Automatic analysis of what's working so you can skip the spreadsheets and act on insights.",
    gradient: "orange" as const,
  },
  {
    icon: "file-text",
    title: "Custom Reports",
    description: "Build and schedule branded reports that impress clients effortlessly.",
    gradient: "lime" as const,
  },
  {
    icon: "users",
    title: "Competitor Benchmarking",
    description: "Compare your metrics to competitors and understand your market position.",
    gradient: "emerald" as const,
  },
  {
    icon: "target",
    title: "Goal Tracking",
    description: "Set and track KPIs across all platforms to measure what actually matters.",
    gradient: "orange" as const,
  },
  {
    icon: "share-2",
    title: "Export & Integration",
    description: "Connect to your existing tools and export data in any format you need.",
    gradient: "lime" as const,
  },
];

const icons: Record<string, string> = {
  "bar-chart-2": `<line x1="18" x2="18" y1="20" y2="10"/><line x1="12" x2="12" y1="20" y2="4"/><line x1="6" x2="6" y1="20" y2="14"/>`,
  brain: `<path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"/><path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z"/><path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4"/>`,
  "file-text": `<path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/>`,
  users: `<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`,
  target: `<circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/>`,
  "share-2": `<circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" x2="15.42" y1="13.51" y2="17.49"/><line x1="15.41" x2="8.59" y1="6.51" y2="10.49"/>`,
};

const relatedFeatures = [
  { name: "AI Content Engine", href: "/features/ai-content", description: "Generate content in seconds" },
  { name: "GMB Command Center", href: "/features/gmb", description: "Full control of your Google presence" },
  { name: "Meta Unified", href: "/features/meta", description: "Instagram, Facebook, Threads in sync" },
];
---

<Layout
  title="Smart Analytics - Adfluens"
  description="Stop guessing, start knowing. AI-powered insights that tell you exactly what's working across all your social platforms."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative section-padding bg-background overflow-hidden">
      <GridPattern class="opacity-[0.02]" />
      <GlowOrb color="lime" position="top-right" size="xl" animation="slow" class="opacity-15" />
      <GlowOrb color="emerald" position="bottom-left" size="lg" animation="medium" class="opacity-10" />

      <div class="relative z-10 container-marketing">
        <div class="max-w-3xl">
          <a
            href="/features"
            class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors mb-6"
            data-reveal
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="m15 18-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            All Features
          </a>

          <div class="flex items-center gap-3 mb-6" data-reveal data-delay="1">
            <div
              class="w-12 h-12 rounded-lg border border-secondary/30 bg-secondary/10 flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-secondary"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                viewBox="0 0 24 24"
                set:html={icons["bar-chart-2"]}
              />
            </div>
            <span class="text-sm font-medium text-secondary">Smart Analytics</span>
          </div>

          <h1
            class="font-display text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6"
            data-reveal
            data-delay="2"
          >
            Stop guessing.
            <span class="text-gradient-primary">Start knowing.</span>
          </h1>

          <p class="text-xl text-muted-foreground leading-relaxed mb-8" data-reveal data-delay="3">
            Data-driven decisions made simple. Our AI analyzes your performance across every platform and tells you
            exactly what's working—without the spreadsheets.
          </p>

          <div class="flex flex-wrap gap-4" data-reveal data-delay="4">
            <Button variant="primary" size="lg" href="/signup">
              See Your Real Performance
            </Button>
            <Button variant="outline" size="lg" href="/demo">
              See It in Action
            </Button>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem/Solution Section -->
    <section class="relative section-padding bg-muted/10 border-t border-b border-border">
      <div class="container-marketing">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Problem -->
          <div data-reveal>
            <p class="text-sm font-medium text-destructive mb-3">The Problem</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              Analytics chaos
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Your data is scattered across five different dashboards. Creating reports takes hours. And by the time you
              figure out what worked, it's already old news. Sound familiar?
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Data scattered across multiple platforms</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>Hours spent building spreadsheet reports</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-destructive shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span>No clear insights on what's actually working</span>
              </li>
            </ul>
          </div>

          <!-- Solution -->
          <div data-reveal data-delay="1">
            <p class="text-sm font-medium text-secondary mb-3">The Solution</p>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4">
              AI that does the thinking
            </h2>
            <p class="text-muted-foreground leading-relaxed mb-6">
              Adfluens brings all your analytics together and uses AI to surface the insights that matter. No more
              digging through data—just clear answers and actionable recommendations.
            </p>
            <ul class="space-y-3 text-muted-foreground">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>All platforms in one unified dashboard</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>AI-generated insights, not just data</span>
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Beautiful reports in minutes, not hours</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="relative section-padding bg-background">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            Analytics that work for you
          </h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            From real-time dashboards to automated reports—everything you need to prove ROI.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            features.map((feature, index) => (
              <div data-reveal data-delay={index + 1}>
                <FeatureCard
                  title={feature.title}
                  description={feature.description}
                  icon={feature.icon}
                  gradient={feature.gradient}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Dashboard Preview -->
    <section class="relative section-padding bg-muted/10 border-t border-border">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            See your performance at a glance
          </h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            A unified dashboard that shows you everything you need to know.
          </p>
        </div>

        <div class="max-w-5xl mx-auto" data-reveal data-delay="2">
          <div class="rounded-lg border border-border bg-card overflow-hidden">
            <!-- Dashboard mockup -->
            <div class="p-6 border-b border-border bg-muted/20">
              <div class="flex items-center gap-4">
                <div class="flex gap-1.5">
                  <div class="w-3 h-3 rounded-full bg-destructive/50"></div>
                  <div class="w-3 h-3 rounded-full bg-accent/50"></div>
                  <div class="w-3 h-3 rounded-full bg-secondary/50"></div>
                </div>
                <div class="text-sm text-muted-foreground">Analytics Dashboard</div>
              </div>
            </div>

            <div class="p-6">
              <!-- Stats row -->
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                <div class="p-4 rounded-lg bg-muted/20 border border-border">
                  <div class="text-sm text-muted-foreground mb-1">Total Reach</div>
                  <div class="font-mono text-2xl font-bold text-foreground">1.2M</div>
                  <div class="text-xs text-secondary">+12.5% vs last month</div>
                </div>
                <div class="p-4 rounded-lg bg-muted/20 border border-border">
                  <div class="text-sm text-muted-foreground mb-1">Engagement</div>
                  <div class="font-mono text-2xl font-bold text-foreground">4.8%</div>
                  <div class="text-xs text-secondary">+0.3% vs last month</div>
                </div>
                <div class="p-4 rounded-lg bg-muted/20 border border-border">
                  <div class="text-sm text-muted-foreground mb-1">New Followers</div>
                  <div class="font-mono text-2xl font-bold text-foreground">2,847</div>
                  <div class="text-xs text-secondary">+8.2% vs last month</div>
                </div>
                <div class="p-4 rounded-lg bg-muted/20 border border-border">
                  <div class="text-sm text-muted-foreground mb-1">Response Rate</div>
                  <div class="font-mono text-2xl font-bold text-foreground">98%</div>
                  <div class="text-xs text-secondary">Within 1 hour</div>
                </div>
              </div>

              <!-- AI Insight -->
              <div class="p-4 rounded-lg border border-accent/30 bg-accent/5">
                <div class="flex items-start gap-3">
                  <div
                    class="w-8 h-8 rounded-lg bg-accent/20 flex items-center justify-center shrink-0"
                  >
                    <svg class="w-4 h-4 text-accent-foreground" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                      <path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z" stroke-linecap="round" stroke-linejoin="round"></path>
                      <path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-foreground mb-1">AI Insight</div>
                    <div class="text-sm text-muted-foreground">
                      Your Instagram Reels are performing 3x better than static posts. Consider shifting 20% of your
                      content budget to video for maximum engagement.
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Features -->
    <section class="relative section-padding bg-background border-t border-border">
      <div class="container-marketing">
        <h2 class="font-display text-xl font-bold text-foreground mb-8" data-reveal>
          Explore more features
        </h2>

        <div class="grid md:grid-cols-3 gap-6">
          {
            relatedFeatures.map((feature, index) => (
              <a
                href={feature.href}
                class="group p-6 rounded-lg border border-border bg-card hover:bg-muted/30 transition-colors"
                data-reveal
                data-delay={index + 1}
              >
                <h3 class="font-display font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
                  {feature.name}
                </h3>
                <p class="text-sm text-muted-foreground">{feature.description}</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative section-padding bg-background overflow-hidden border-t border-border">
      <GlowOrb color="emerald" position="center" size="2xl" animation="none" class="opacity-15" />

      <div class="relative z-10 container-marketing text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground mb-6" data-reveal>
          Ready to see what's really working?
        </h2>
        <p class="text-lg text-muted-foreground max-w-xl mx-auto mb-8" data-reveal data-delay="1">
          Start your free trial and get AI-powered insights in minutes.
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-reveal data-delay="2">
          <Button variant="primary" size="lg" href="/signup">
            See Your Real Performance
          </Button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
