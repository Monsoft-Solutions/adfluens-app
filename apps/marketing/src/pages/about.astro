---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/ui/Button.astro";
import GlowOrb from "../components/effects/GlowOrb.astro";
import GridPattern from "../components/effects/GridPattern.astro";

const values = [
  {
    icon: "sparkles",
    title: "AI for Everyone",
    description:
      "Enterprise-grade AI without enterprise pricing. We believe powerful tools should be accessible to businesses of all sizes.",
  },
  {
    icon: "layout",
    title: "Simplicity First",
    description:
      "Power shouldn't mean complexity. We obsess over making sophisticated features feel effortless to use.",
  },
  {
    icon: "heart",
    title: "Customer Obsessed",
    description:
      "Your success is our success. We measure ourselves by the growth we help our customers achieve.",
  },
  {
    icon: "rocket",
    title: "Always Improving",
    description:
      "We ship updates weekly, driven by customer feedback. The product you see today will be even better tomorrow.",
  },
];

const stats = [
  { value: "2,500+", label: "Active Businesses" },
  { value: "50M+", label: "Posts Published" },
  { value: "4.9", label: "Customer Rating" },
  { value: "99.9%", label: "Uptime" },
];

const icons: Record<string, string> = {
  sparkles: `<path d="M9.937 15.5A2 2 0 0 0 8.5 14.063l-6.135-1.582a.5.5 0 0 1 0-.962L8.5 9.936A2 2 0 0 0 9.937 8.5l1.582-6.135a.5.5 0 0 1 .963 0L14.063 8.5A2 2 0 0 0 15.5 9.937l6.135 1.581a.5.5 0 0 1 0 .964L15.5 14.063a2 2 0 0 0-1.437 1.437l-1.582 6.135a.5.5 0 0 1-.963 0z"/><path d="M20 3v4"/><path d="M22 5h-4"/><path d="M4 17v2"/><path d="M5 18H3"/>`,
  layout: `<rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/>`,
  heart: `<path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>`,
  rocket: `<path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>`,
};
---

<Layout
  title="About Adfluens - Our Mission & Story"
  description="Learn about Adfluens, the AI-first social media management platform built for businesses who want to grow smarter."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative section-padding bg-background overflow-hidden">
      <GridPattern class="opacity-[0.02]" />
      <GlowOrb color="lime" position="top-left" size="xl" animation="slow" class="opacity-15" />
      <GlowOrb color="orange" position="bottom-right" size="lg" animation="medium" class="opacity-10" />

      <div class="relative z-10 container-marketing">
        <div class="max-w-3xl">
          <p class="text-primary font-medium mb-4" data-reveal>About Adfluens</p>
          <h1
            class="font-display text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-foreground mb-6"
            data-reveal
            data-delay="1"
          >
            Built for businesses who want to
            <span class="text-gradient-primary">grow smarter</span>
          </h1>
          <p class="text-xl text-muted-foreground leading-relaxed" data-reveal data-delay="2">
            We started Adfluens because we saw businesses drowning in fragmented social tools, burning hours on tasks
            that AI could handle in seconds. We knew there had to be a better way.
          </p>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="relative section-padding bg-muted/10 border-t border-b border-border">
      <div class="container-marketing">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <div data-reveal>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-6">Our Mission</h2>
            <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
              To democratize intelligent social media management. We believe every business—from the local coffee shop
              to the growing agency—deserves access to the same powerful AI tools that enterprise companies use.
            </p>
            <p class="text-lg text-muted-foreground leading-relaxed">
              We're not just building another social media scheduler. We're creating an AI-powered command center that
              handles content creation, review management, analytics, and conversations—so you can focus on what
              matters: growing your business.
            </p>
          </div>

          <div class="relative" data-reveal data-delay="1">
            <div class="aspect-video rounded-lg border border-border bg-card overflow-hidden">
              <!-- Placeholder for mission visual -->
              <div
                class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/5 to-accent/5"
              >
                <div class="text-center">
                  <div
                    class="w-20 h-20 rounded-xl border border-border bg-muted/30 flex items-center justify-center mx-auto mb-4"
                  >
                    <svg
                      class="w-10 h-10 text-primary"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    </svg>
                  </div>
                  <p class="text-sm text-muted-foreground">The unified platform for social growth</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="relative section-padding bg-background">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>What We Believe</h2>
          <p class="text-muted-foreground max-w-2xl mx-auto" data-reveal data-delay="1">
            Our values guide every decision we make, from product features to customer support.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {
            values.map((value, index) => (
              <div
                class="group relative p-6 rounded-lg border border-border bg-card gradient-border transition-all"
                data-reveal
                data-delay={index + 1}
              >
                <div class="w-12 h-12 rounded-md border border-border bg-muted/30 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                  <svg
                    class="w-6 h-6 text-foreground"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    viewBox="0 0 24 24"
                    set:html={icons[value.icon]}
                  />
                </div>
                <h3 class="font-display font-semibold text-lg text-foreground mb-2">{value.title}</h3>
                <p class="text-sm text-muted-foreground leading-relaxed">{value.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="relative section-padding bg-muted/10 border-t border-border">
      <div class="container-marketing">
        <div class="text-center mb-12">
          <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-4" data-reveal>
            Trusted by growing businesses
          </h2>
          <p class="text-muted-foreground" data-reveal data-delay="1">
            The numbers speak for themselves.
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {
            stats.map((stat, index) => (
              <div class="text-center" data-reveal data-delay={index + 1}>
                <div class="font-mono text-4xl md:text-5xl font-bold text-foreground mb-2">{stat.value}</div>
                <div class="text-sm text-muted-foreground">{stat.label}</div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="relative section-padding bg-background border-t border-border">
      <div class="container-marketing max-w-3xl">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-8 text-center" data-reveal>
          Our Story
        </h2>

        <div class="prose prose-invert max-w-none" data-reveal data-delay="1">
          <div class="space-y-6 text-muted-foreground leading-relaxed">
            <p>
              Adfluens started with a simple observation: businesses were spending hours each week juggling multiple
              social media tools, copying and pasting content between platforms, and manually responding to reviews.
              Meanwhile, AI was advancing rapidly—but existing tools treated it as a premium add-on rather than a core
              feature.
            </p>
            <p>
              We believed there had to be a better way. What if we built a platform from the ground up with AI at its
              core? What if we made enterprise-grade automation accessible to businesses of all sizes?
            </p>
            <p>
              That question became Adfluens—a unified command center where content creation, review management,
              analytics, and conversations all work together, powered by AI that learns your brand and improves over
              time.
            </p>
            <p>
              Today, thousands of businesses use Adfluens to amplify their social presence while saving hours every
              week. But we're just getting started. Every week, we ship new features driven by customer feedback,
              always with the same goal: helping you grow smarter, not harder.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative section-padding bg-background overflow-hidden border-t border-border">
      <GlowOrb color="orange" position="center" size="2xl" animation="none" class="opacity-15" />

      <div class="relative z-10 container-marketing text-center">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-foreground mb-6" data-reveal>
          Ready to join us?
        </h2>
        <p class="text-lg text-muted-foreground max-w-xl mx-auto mb-8" data-reveal data-delay="1">
          Start your free trial today and see why thousands of businesses trust Adfluens.
        </p>
        <div class="flex flex-wrap justify-center gap-4" data-reveal data-delay="2">
          <Button variant="primary" size="lg" href="/signup">
            Start Free Trial
          </Button>
          <Button variant="outline" size="lg" href="/careers">
            Join Our Team
          </Button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
