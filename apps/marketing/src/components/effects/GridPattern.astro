---
type Props = {
  class?: string;
};

const { class: className } = Astro.props;

// Generate unique ID to prevent collisions when multiple instances are used
const patternId = `grid-pattern-${crypto.randomUUID()}`;
---

<div
  class:list={["absolute inset-0 pointer-events-none overflow-hidden", className]}
  aria-hidden="true"
>
  <svg class="w-full h-full opacity-[0.03]">
    <defs>
      <pattern
        id={patternId}
        width="40"
        height="40"
        patternUnits="userSpaceOnUse"
      >
        <path
          d="M 40 0 L 0 0 0 40"
          fill="none"
          stroke="currentColor"
          stroke-width="0.5"
          class="text-foreground"></path>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill={`url(#${patternId})`}></rect>
  </svg>
</div>
