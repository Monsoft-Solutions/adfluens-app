---
const platforms = [
  {
    name: "Google My Business",
    description: "Profile optimization, review management, local analytics",
    icon: `<path d="M12 22s-8-4.5-8-11.8A8 8 0 0 1 12 2a8 8 0 0 1 8 8.2c0 7.3-8 11.8-8 11.8z"/><circle cx="12" cy="10" r="3"/>`,
    color: "text-red-500",
  },
  {
    name: "Instagram",
    description: "Posts, Stories, Reels, DMs, Insights",
    icon: `<rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>`,
    color: "text-pink-500",
  },
  {
    name: "Facebook",
    description: "Pages, Groups, Messenger, Ads integration",
    icon: `<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>`,
    color: "text-blue-500",
  },
  {
    name: "Threads",
    description: "Cross-posting, engagement, early-mover advantage",
    icon: `<path d="M12 3c-1.2 0-2.4.6-3 1.7A3.6 3.6 0 0 0 4.6 9c-1 1.5-1.2 3.6-.4 5.3a5.6 5.6 0 0 0 3.8 3.2c1.7.4 3.6 0 4.9-1.2 1.3-1.2 2-3 1.6-4.8-.4-1.7-1.8-3-3.5-3.3-1.3-.2-2.6.3-3.5 1.3"/><path d="M15.7 8.7c.8.6 1.4 1.5 1.6 2.5.2 1.3-.2 2.6-1 3.6-.7.8-1.7 1.3-2.8 1.3"/>`,
    color: "text-foreground",
  },
];
---

<section id="integrations" class="relative section-padding bg-card/30 overflow-hidden">
  <!-- Top border gradient -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>

  <div class="container-marketing">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16" data-reveal>
      <h2 class="font-display text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-foreground mb-4">
        One dashboard.
        <span class="text-gradient-primary">Every platform.</span>
      </h2>
      <p class="text-lg text-muted-foreground">
        Connect all your social accounts and manage everything from a single,
        unified command center.
      </p>
    </div>

    <!-- Platform Ecosystem -->
    <div class="relative">
      <!-- Center Hub -->
      <div class="flex justify-center mb-8 md:mb-12" data-reveal data-delay="1">
        <div class="relative">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-xl border-2 border-primary bg-card flex items-center justify-center shadow-hard">
            <div class="text-center">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                class="w-8 h-8 md:w-10 md:h-10 mx-auto text-primary"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
              <span class="text-xs font-medium mt-1 block">Adfluens</span>
            </div>
          </div>
          <!-- Pulse effect -->
          <div class="absolute inset-0 rounded-xl border-2 border-primary/30 animate-ping"></div>
        </div>
      </div>

      <!-- Platform Cards -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        {
          platforms.map((platform, index) => (
            <div
              class="group relative p-4 md:p-6 rounded-lg border border-border bg-card hover:border-foreground/20 transition-all"
              data-reveal
              data-delay={String(index + 2)}
            >
              <!-- Connection Line (visual only) -->
              <div class="absolute -top-4 left-1/2 w-px h-4 bg-border hidden md:block"></div>

              <!-- Icon -->
              <div class={`w-10 h-10 md:w-12 md:h-12 rounded-md border border-border bg-muted/30 flex items-center justify-center mb-3 group-hover:scale-110 transition-transform ${platform.color}`}>
                <svg
                  class="w-5 h-5 md:w-6 md:h-6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  viewBox="0 0 24 24"
                  set:html={platform.icon}
                />
              </div>

              <!-- Content -->
              <h3 class="font-display font-semibold text-sm md:text-base text-foreground mb-1">
                {platform.name}
              </h3>
              <p class="text-xs text-muted-foreground leading-relaxed hidden md:block">
                {platform.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Connection indicator -->
    <div class="text-center mt-8 md:mt-12" data-reveal data-delay="5">
      <p class="text-sm text-muted-foreground">
        <span class="inline-flex items-center gap-2">
          <span class="w-2 h-2 rounded-full bg-secondary animate-pulse"></span>
          All platforms sync in real-time
        </span>
      </p>
    </div>
  </div>

  <!-- Bottom border gradient -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
</section>
